<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
    </target>

    <target name="jar">
    
    <mkdir dir="build/jar"/>
    <jar destfile="build/jar/ExchangeRatesApp.jar" basedir="build/classes">
        <manifest>
           <attribute name="Main-Class" value="observer.ExchangeRatesApp"/>
        </manifest>
    </jar>
    
    </target>

    <target name="run">
        <java jar="build/jar/ExchangeRatesApp.jar" fork="true"/>
    </target>

</project>